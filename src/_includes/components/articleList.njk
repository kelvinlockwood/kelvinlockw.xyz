{%- for article in articleList | sort(attribute='date') -%}
    <div class="article-width flex flex-col items-start mb-9" style="z-index:1">
        <div class="flex items-center justify-center">
            <span class="py-1 text-gray-400 text-opacity-80 text-xs font-medium tracking-widest">
                {{ article.date | displayDate }}
            </span>
        </div>
        <h2 class="sm:text-2xl text-xl title-font font-medium text-white mt-1 mb-4">
            <a href="{{ article.url }}">
                {{ article.data.title }}
            </a>
        </h2>
        <p class="leading-relaxed mb-2">
            {{ article.data.banner.description }}
        </p>
        <a class="pb-5 text-mygray-300 text-opacity-80 text-xs font-medium tracking-widest" href="{{ article.url }}">
            Read more
        </a>
        <div class="flex items-center flex-wrap mb-5 mt-auto w-full gap-y-2">
            {% for tag in article.data.tags | displayTags %}
                <a href="/tags/{{ tag }}" class="tag">
                    {{ tag }}
                </a>
            {% endfor %}
        </div>
    </div>
{%- endfor -%}
